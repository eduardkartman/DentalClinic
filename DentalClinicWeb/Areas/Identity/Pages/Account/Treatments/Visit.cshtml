@page
@using DentalClinicWeb.Areas.Identity.Pages.Account.Treatments
@model VisitModel
@{
    ViewData["Title"] = "Treatments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">

                    @if (User.IsInRole("Patient") || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="PatientView">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Appointment/Appointment">Appointments</a>
                        </li>
                    }

                    @if (User.IsInRole("Doctor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="DoctorView">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Appointment/DoctorAppointment">Manage Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Appointment/HistoryAppointment">Appointments</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Treatments/Visit">Treatments</a>
                    </li>
                    @if (User.IsInRole("Doctor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Users/Patients">Reports</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span data-feather="layers"></span>
                            Integrations
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Treatments</h1>

            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-12 mb-4">
                    <a asp-area="Identity" asp-page="/Account/Treatments/CreateVisit" class="btn btn-primary">Create New Treatment</a>
                </div>
            }

            <div class="col-md-12">
                <h3>Treatments Summary</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Treatment</th>
                            <th>Description</th>
                            <th>Cost ($) </th>
                            <th>Duration (min)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var visit in Model.Visits)
                        {
                            <tr>
                                <td>@visit.Name</td>
                                <td>@visit.Description</td>
                                <td>@visit.Price</td>
                                <th>@visit.DurationInMinutes</th>
                                <td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Treatments/EditVisit" asp-route-id="@visit.Id"><i class="fa fa-pencil"></i> Edit</a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@visit.Id" onsubmit="return confirm('Are you sure you want to delete this treatment?');">
                                                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-trash"></i> Delete</button>
                                            </form>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>

    </div>

</div>
