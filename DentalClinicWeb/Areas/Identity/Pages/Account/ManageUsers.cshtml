@page
@model ManageUsersModel

<div class="container">
    <br />
    <br />
    <h1>Manage Users</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>User ID</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Country</th>
                <th>City</th>
                <th>ZIP Code</th>
                <th>Role</th>
                <th>Edit / Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Country</td>
                    <td>@user.City</td>
                    <td>@user.ZipCode</td>
                    <td>@user.Role</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Edit and Delete">
                            <form method="get" asp-area="Identity" asp-page="/Account/EditUsers" asp-route-id="@user.UserId">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</button>
                            </form>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@user.UserId" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
